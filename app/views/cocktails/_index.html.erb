<%#= cl_image_tag("yiwxwg4lwgpv4zphek6n.jpg",
      width: 150, height: 150, crop: :thumb, gravity: :face) %>
<% if @cocktails.any? %>
    <% @cocktails.each do |cocktail| %>
        <%= link_to cocktail_path(cocktail), class: 'border' do%>
        <% if cocktail.photo.attached? %>
        <div class="border">
          <%= cocktail.name %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
          </div>
        </div>
        <% else %>
          <div class="border"><%= cocktail.name %></div>
          <%#= image_tag 'avatar.png' %>
        <% end %>
        <% end %>
    <% end %>
<% else %>
  <h3>Bummer ğŸ˜¿</h3>
  <p class="empty-state">
    You don't have any cocktails yet. Get the party started by
    <strong><%= link_to 'adding your first one now', new_cocktail_path %></strong>!
  </p>
<% end %>
